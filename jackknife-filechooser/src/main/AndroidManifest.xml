<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lwh.jackknife.fileexplorer">
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name=".ui.FileExplorerActivity">
            <intent-filter>
                <action android:name="com.lwh.jackknife.action.CHOOSE_FILE"/>
                <action android:name="com.lwh.jackknife.action.CHOOSE_FOLDER"/>
                <action android:name="com.lwh.jackknife.action.CHOOSE_BOTH_FILE_AND_FOLDER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.lwh.jackknife.permission.bridge.BridgeActivity"
            android:screenOrientation="portrait" />
    </application>
</manifest>
